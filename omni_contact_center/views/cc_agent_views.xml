<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Agent List View -->
    <record id="cc_agent_view_list" model="ir.ui.view">
        <field name="name">cc.agent.list</field>
        <field name="model">cc.agent</field>
        <field name="arch" type="xml">
            <list string="Agents">
                <field name="name"/>
                <field name="agent_code"/>
                <field name="extension"/>
                <field name="status" widget="badge" decoration-success="status == 'available'" decoration-warning="status in ['on_break', 'after_call']" decoration-danger="status == 'offline'" decoration-info="status == 'busy'"/>
                <field name="team_id"/>
                <field name="current_chats"/>
                <field name="max_concurrent_chats"/>
                <field name="total_calls"/>
            </list>
        </field>
    </record>

    <!-- Agent Form View -->
    <record id="cc_agent_view_form" model="ir.ui.view">
        <field name="name">cc.agent.form</field>
        <field name="model">cc.agent</field>
        <field name="arch" type="xml">
            <form string="Agent">
                <header>
                    <button name="action_set_available" type="object" string="Available" class="btn-primary" invisible="status == 'available'"/>
                    <button name="action_set_busy" type="object" string="Busy" invisible="status == 'busy'"/>
                    <button name="action_set_break" type="object" string="On Break" invisible="status == 'on_break'"/>
                    <button name="action_set_offline" type="object" string="Offline" invisible="status == 'offline'"/>
                    <field name="status" widget="statusbar" statusbar_visible="offline,available,busy"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <field name="employee_id" invisible="1"/>
                    <widget name="web_ribbon" title="Offline" bg_color="text-bg-danger" invisible="status != 'offline'"/>
                    <widget name="web_ribbon" title="Available" bg_color="text-bg-success" invisible="status != 'available'"/>
                    <widget name="web_ribbon" title="Busy" bg_color="text-bg-info" invisible="status != 'busy'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Agent Name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Agent Info">
                            <field name="agent_code"/>
                            <field name="extension"/>
                            <field name="team_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Channels">
                            <field name="can_voice"/>
                            <field name="can_chat"/>
                            <field name="can_email"/>
                            <field name="can_social"/>
                        </group>
                    </group>
                    <group>
                        <group string="Capacity">
                            <field name="max_concurrent_chats"/>
                            <field name="current_chats"/>
                            <field name="current_shift_id"/>
                        </group>
                        <group string="Statistics">
                            <field name="total_calls"/>
                            <field name="total_chats"/>
                            <field name="avg_handle_time"/>
                            <field name="avg_rating"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Skills" name="skills">
                            <field name="skill_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Timestamps" name="timestamps">
                            <group>
                                <field name="last_status_change"/>
                                <field name="last_call_time"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Agent Kanban View -->
    <record id="cc_agent_view_kanban" model="ir.ui.view">
        <field name="name">cc.agent.kanban</field>
        <field name="model">cc.agent</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status">
                <field name="name"/>
                <field name="status"/>
                <field name="team_id"/>
                <field name="agent_code"/>
                <field name="current_chats"/>
                <field name="max_concurrent_chats"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="status" widget="label_selection" options="{'classes': {'offline': 'danger', 'available': 'success', 'busy': 'info', 'on_break': 'warning', 'after_call': 'secondary'}}"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="agent_code"/>
                                <br/>
                                <field name="team_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span>Chats: <field name="current_chats"/>/<field name="max_concurrent_chats"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Agent Search View -->
    <record id="cc_agent_view_search" model="ir.ui.view">
        <field name="name">cc.agent.search</field>
        <field name="model">cc.agent</field>
        <field name="arch" type="xml">
            <search string="Search Agents">
                <field name="name"/>
                <field name="agent_code"/>
                <field name="extension"/>
                <field name="team_id"/>
                <field name="skill_ids"/>
                <separator/>
                <filter string="Available" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="Busy" name="busy" domain="[('status', '=', 'busy')]"/>
                <filter string="Offline" name="offline" domain="[('status', '=', 'offline')]"/>
                <filter string="On Break" name="on_break" domain="[('status', '=', 'on_break')]"/>
                <separator/>
                <filter string="Can Voice" name="can_voice" domain="[('can_voice', '=', True)]"/>
                <filter string="Can Chat" name="can_chat" domain="[('can_chat', '=', True)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Team" name="group_by_team" context="{'group_by': 'team_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Agent Action -->
    <record id="cc_agent_action" model="ir.actions.act_window">
        <field name="name">Agents</field>
        <field name="res_model">cc.agent</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="cc_agent_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first agent
            </p>
            <p>
                Agents handle customer interactions across various channels.
            </p>
        </field>
    </record>

    <!-- Shift List View -->
    <record id="cc_shift_view_list" model="ir.ui.view">
        <field name="name">cc.shift.list</field>
        <field name="model">cc.shift</field>
        <field name="arch" type="xml">
            <list string="Shifts">
                <field name="date"/>
                <field name="agent_id"/>
                <field name="team_id"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="status" widget="badge" decoration-success="status == 'completed'" decoration-warning="status == 'in_progress'" decoration-info="status == 'scheduled'" decoration-danger="status in ['missed', 'cancelled']"/>
            </list>
        </field>
    </record>

    <!-- Shift Form View -->
    <record id="cc_shift_view_form" model="ir.ui.view">
        <field name="name">cc.shift.form</field>
        <field name="model">cc.shift</field>
        <field name="arch" type="xml">
            <form string="Shift">
                <header>
                    <button name="action_start_shift" type="object" string="Start Shift" class="btn-primary" invisible="status != 'scheduled'"/>
                    <button name="action_end_shift" type="object" string="End Shift" class="btn-primary" invisible="status != 'in_progress'"/>
                    <button name="action_cancel_shift" type="object" string="Cancel" invisible="status not in ['scheduled']"/>
                    <field name="status" widget="statusbar" statusbar_visible="scheduled,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="agent_id"/>
                            <field name="team_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="break_duration"/>
                        </group>
                    </group>
                    <group>
                        <group string="Actual Times">
                            <field name="actual_start"/>
                            <field name="actual_end"/>
                            <field name="break_taken"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Shift Search View -->
    <record id="cc_shift_view_search" model="ir.ui.view">
        <field name="name">cc.shift.search</field>
        <field name="model">cc.shift</field>
        <field name="arch" type="xml">
            <search string="Search Shifts">
                <field name="agent_id"/>
                <field name="team_id"/>
                <field name="date"/>
                <separator/>
                <filter string="Scheduled" name="scheduled" domain="[('status', '=', 'scheduled')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('status', '=', 'completed')]"/>
                <separator/>
                <filter string="Today" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="This Week" name="this_week" domain="[('date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('date', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Agent" name="group_by_agent" context="{'group_by': 'agent_id'}"/>
                    <filter string="Team" name="group_by_team" context="{'group_by': 'team_id'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Shift Action -->
    <record id="cc_shift_action" model="ir.actions.act_window">
        <field name="name">Shifts</field>
        <field name="res_model">cc.shift</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="search_view_id" ref="cc_shift_view_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Schedule agent shifts
            </p>
            <p>
                Manage work schedules for your contact center agents.
            </p>
        </field>
    </record>

    <!-- Shift Calendar View -->
    <record id="cc_shift_view_calendar" model="ir.ui.view">
        <field name="name">cc.shift.calendar</field>
        <field name="model">cc.shift</field>
        <field name="arch" type="xml">
            <calendar string="Shifts" date_start="date" color="agent_id" mode="week">
                <field name="agent_id"/>
                <field name="team_id"/>
            </calendar>
        </field>
    </record>

</odoo>
